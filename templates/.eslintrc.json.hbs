{
  "env": {
    "commonjs": true,
    "node": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error"
  },
  "globals": {
    "RED": true,
    "$": "readonly",
    "document": "readonly",
    "window": "readonly"
  }
}
